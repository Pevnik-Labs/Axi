theorem and-comm : P /\ Q --> Q /\ P :=
  assume (both P Q)
  both Q P

theorem impl-or-neg : ~ P \/ Q --> (P --> Q) :=
  assume (~ P \/ Q) P
  or-elim (~ P \/ Q)
  - modus-ponens (~ P) P
  - assumption

theorem noncontradiction : ~ (P /\ ~ P) :=
  assume (both P (~ P))
  modus-ponens (~ P) P

theorem contraposition : (P --> Q) --> (~ Q --> ~ P) :=
  assume (P --> Q) (~ Q) P
  modus-ponens (~ Q), (P --> Q)
  assumption

theorem iff-not : (P <--> Q) --> (~ P <--> ~ Q) :=
  assume (both (P --> Q) (Q --> P))
  both
  - modus-ponens contraposition (Q --> P)
  - modus-ponens contraposition (P --> Q)

theorem iff-elim : ((P --> Q) --> (Q --> P) --> R) --> ((P <--> Q) --> R) :=
  assume (f = _) (both (P --> Q) (Q --> P))
  modus-ponens f (P --> Q) (Q --> P)

theorem resolution : (P \/ Q) /\ (~ P \/ R) --> Q \/ R :=
  assume (both (P \/ Q) (~ P \/ R))
  or-elim (P \/ Q) ?p ?q
  case ?q
    assume Q
    or-left Q
  case ?p
    or-elim (~ P \/ R)
    - assume (~ P)
      absurd (~ P) P
    - assume R
      or-right R

theorem resolution' : (P \/ Q) /\ (~ P \/ R) --> Q \/ R :=
  assume (both (P \/ Q) (~ P \/ R))
  or-elim (P \/ Q) (assume P in ?p) (assume Q in ?q)
  case ?q
    or-left Q
  case ?p
    or-elim (~ P \/ R)
    - assume (~ P)
      absurd (~ P) P
    - assume R
      or-right R

