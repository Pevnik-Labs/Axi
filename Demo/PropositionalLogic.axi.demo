theorem funny-contraposition : (P --> ~ Q) --> (Q --> ~ P) :=
  assume (P --> ~ Q) Q P
  modus-ponens (P --> ~ Q) P Q

theorem not_or : ~ (P \/ Q) --> ~ P /\ ~ Q :=
  assume (npq = ~ (P \/ Q))
  both
  - assume P
    modus-ponens npq
    or-left
    P
  - assume Q
    modus-ponens npq
    or-right
    Q